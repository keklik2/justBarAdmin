<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menu">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="entry">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/secondary_light</item>
    </style>

    <style name="secondary">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="degree">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/dark_red</item>
    </style>

    <style name="entryUnitMainMenuText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Input layouts -->
    <style name="inputText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="inputTextLayout">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>


</resources>
